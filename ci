#!/usr/bin/env zsh

set -e
set -x

cargo fmt -- --check

export PATH="$PATH":"`pwd`"/target/debug
# TODO(rescrv, 1.91):  Remove this allowance.
export RUSTFLAGS="-A clippy::needless-lifetimes --deny warnings"

pushd meta
cargo build
popd

for package in `target/debug/publish`
do
    pushd $package
    cargo clippy --no-deps --all-targets
    cargo build --bins
    cargo hack $HACK_FLAGS --feature-powerset test
    cargo doc --no-deps
    ../target/debug/binaries
    popd
done

set +x
echo SUCCESS: this concludes our successful CI adventure
